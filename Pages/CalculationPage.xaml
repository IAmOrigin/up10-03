<Page x:Class="up10_03.Pages.CalculationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up10_03.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalculationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock
            Text="Рассчет материала"
            FontSize="16"
            HorizontalAlignment="Center"/>
        <Grid
            Margin="10"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Row="0"
                Text="Тип продукта:"/>
            <ComboBox
                Name="ComboboxProductType"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,5">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Grid.Row="1"
                Text="Тип матреиала:"/>
            <ComboBox
                Name="ComboboxDefectType"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,5">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding Product.Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Grid.Row="2"
                Text="Количество:"/>
            <TextBox
                Name="TextBoxCount"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,0,5"/>
            <TextBlock
                Grid.Row="3"
                Text="Высота:"/>
            <TextBox
                Name="TextBoxHeight"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,0,0,5"/>
            <TextBlock
                Grid.Row="4"
                Text="Ширина:"/>
            <TextBox
                Name="TextBoxWidth"
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,0,0,5"/>
            <TextBlock
                Name="TextBlockResult"
                HorizontalAlignment="Center"
                Grid.Row="5"
                Grid.Column="1"/>
        </Grid>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Grid.Row="2">
            <Button
                Click="ButtonBack"
                Content="Назад"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
            <Button
                Click="ButtonCalculate"
                Content="Рассчитать"
                Height="30"
                Width="90"
                Margin="5,0"
                Background="White"/>
        </StackPanel>
    </Grid>
</Page>
