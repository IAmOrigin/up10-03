<Page x:Class="up10_03.Pages.PartnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up10_03.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnersPage">

    <Grid>
        <ListView
            
            Name="ListViewPartners"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            Margin="0,0,0,40"
            MouseDoubleClick="ListViewPartners_MouseDoubleClick"
            HorizontalContentAlignment="Stretch"
            Background="{x:Null}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border
                        BorderThickness="1"
                        BorderBrush="#FF757575"
                        Background="White">
                        <Grid
                            Margin="15,10">
                            <StackPanel
                                Orientation="Vertical">
                                <StackPanel
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Text="{Binding Type}"
                                        FontSize="16"/>
                                    <TextBlock
                                        Text=" | "
                                        FontSize="16"/>
                                    <TextBlock
                                        Text="{Binding Name}"
                                        FontSize="16"/>
                                </StackPanel>
                                
                                <TextBlock
                                    Text="{Binding Director}"/>
                                <TextBlock
                                    Text="{Binding Phone, StringFormat=+7{0}}"/>
                                <TextBlock
                                    Text="{Binding Rating, StringFormat=Рейтинг: {0}}"/>
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock
                                    Text="{Binding Discount}"
                                    FontSize="20"/>
                                <TextBlock
                                    Text="%"
                                    FontSize="20"/>
                            </StackPanel>
                            
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel
            Margin="5"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Button
                
                Click="ButtonBack"
                Content="Назад"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
            <Button
                Click="ButtonNew"
                Content="Создать"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
            
        </StackPanel>
    </Grid>
</Page>
