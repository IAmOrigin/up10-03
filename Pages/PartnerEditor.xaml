<Page x:Class="up10_03.Pages.PartnerEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up10_03.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerEditor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
                Text="Партнер"
                HorizontalAlignment="Center"
                FontSize="16"/>
        <ScrollViewer
            Grid.Row="1">
            <Grid
            Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock
                    Grid.Row="0"
                    Text="Тип:"/>
            <TextBlock
                    Grid.Row="1"
                    Text="Наименование:"/>
            <TextBlock
                    Grid.Row="2"
                    Text="Директор:"/>
            <TextBlock
                    Grid.Row="3"
                    Text="Электронная почта:"/>
            <TextBlock
                    Grid.Row="4"
                    Text="Телефон (без кода страны):"/>
            <TextBlock
                    Grid.Row="5"
                    Text="Адрес:"/>
            <TextBlock
                    Grid.Row="6"
                    Text="ИНН:"/>
            <TextBlock
                    Grid.Row="7"
                    Text="Рейтинг:"/>
            <TextBox
                    Name="TextBoxType"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Column="1"
                    Grid.Row="0"/>
            <TextBox
                    Name="TextBoxName"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="1"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxDirector"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="2"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxEmail"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="3"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxPhone"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="4"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxAdress"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="5"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxInn"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="6"
                    Grid.Column="1"/>
            <TextBox
                    Name="TextBoxRating"
                    MinHeight="25"
                    Margin="0,0,160,5"
                    TextWrapping="Wrap"
                    Grid.Row="7"
                    Grid.Column="1"/>
        </Grid>
        </ScrollViewer>

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Grid.Row="2">
            <Button
                Click="ButtonBack"
                Content="Назад"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
            <Button
                Click="ButtonDelete"
                Content="Удалить"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
            <Button
                Click="ButtonSave"
                Content="Сохранить"
                Height="30"
                Width="90"
                Margin="5,0"
                Background="White"/>
        </StackPanel>
    </Grid>
</Page>
