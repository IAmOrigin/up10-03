<Page x:Class="up10_03.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:up10_03.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Margin="10,0,0,0"
            Grid.Row="0"
            Grid.Column="0"
            Text="Партнер"
            FontSize="16" Grid.ColumnSpan="2"/>

        <TextBlock
            Margin="10,0,0,0"
            Grid.Row="0"
            Grid.Column="1"
            Text="История"
            FontSize="16"/>

        <ListView
            Margin="10,5,0,0"
            Grid.Column="0"
            Name="ListViewPartners"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            SelectionChanged="ListViewPartners_SelectionChanged"
            Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <DataGrid
            Name="DataGridPartnerProducts"
            Grid.Column="1"
            Grid.Row="1"
            Margin="10,5,0,0"
            IsHitTestVisible="False"
            GridLinesVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="3*"
                    Header="Продукция"
                    Binding="{Binding Product.Name}"/>
                <DataGridTextColumn
                    Width="1*"
                    Header="Количество"
                    Binding="{Binding Count}"/>
                <DataGridTextColumn
                    Width="1*"
                    Header="Дата"
                    Binding="{Binding TradeDate, StringFormat={}{0:dd.MM.yyyy}}"/>
            </DataGrid.Columns>

        </DataGrid>

        <StackPanel
            Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Grid.Row="2">
            <Button
                Click="ButtonBack"
                Content="Назад"
                Height="30"
                Width="70"
                Margin="5,0"
                Background="White"/>
        </StackPanel>

    </Grid>
</Page>
